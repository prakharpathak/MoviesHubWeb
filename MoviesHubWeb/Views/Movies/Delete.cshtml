@model Movies

<form method="post" asp-action="DeleteCat">
    <input asp-for="Id" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Movie Info</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Rating"></label>
            <input asp-for="Rating" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px"> Delete </button>
        <a class="btn btn-secondary" style="width:150px" asp-controller="Movies" asp-action="Index">Back to List</a>
    </div>
</form>

<!-- Partial View For Client Side Validation-->
@section Scripts
{
@{
<partial name="_ValidationScriptsPartial" />
}
}