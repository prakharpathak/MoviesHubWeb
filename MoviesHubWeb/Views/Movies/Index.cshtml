@model IEnumerable<Movies> 

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2> Movie List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Movies" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-plus"> Add New Movie </i>
            </a>
        </div>
    </div>




<table class="table table-bordered table-striped" style= "width : 100%">
    <thead>
        <tr>
            <th>
                Movie Name
            </th>
            <th>
                RATING
            </th>
            <th>

            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr width="40%">
                <td width="25%">
                    @obj.Name
                </td>
                <td width="40%">
                        @obj.Rating
                </td>
                    <td style="width : 20%">
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="Movies" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-4"> Edit <i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Movies" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-4"> Delete <i class="bi bi-trash3"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>

